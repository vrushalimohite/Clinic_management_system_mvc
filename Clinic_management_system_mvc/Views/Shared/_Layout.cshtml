<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Clinic_management_system_mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Clinic_management_system_mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div style="background-color:steelblue" class="container-fluid">
                <img src="~/Images/logo.jpg" style="width:100px;height:80px;padding-left:2px; padding-top:5px; padding-bottom:5px;">
                
               <ul>

                    <li class="nav-item">
                        <select id="navigationDropdown" style="background-color:steelblue ;color:white">
                            <option>PATIENT</option>
                            <option value="PatientRegistration">Patient Registration</option>
                            <option value="AppointmentBooking">Patient History</option>
                            <!-- Add more options as needed -->
                        </select>
                    </li>
                    </ul>
                    <ul style="padding-left:0px">
                    <li class="nav-item" ">
                        <select id="DoctorDropdown" style="background-color:steelblue;color:white">
                            <option>DOCTOR</option>
                            <option value="DoctorRegistration">Doctor Registration</option>
                            <option value="AppointmentBooking">Appointment Booking</option>
                            <option value="PatientHistory">Patient History</option>
                            <option value="DoctorTreatment">Doctor Treatment</option>



                            <!-- Add more options as needed -->
                        </select>
                    </li>
                    </ul>
                    <li class="nav-item">
                    <select id="AdminDropdown" style="background-color:steelblue ;color:white">
                            <option>Admin</option>
                            <option value="Billing">Billing</option>
                            <option value="AppointmentBooking">Patient History</option>
                            <!-- Add more options as needed -->
                        </select>
                    </li>

               </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Clinic_management_system_mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
<script>
    $(document).ready(function () {
        $('#navigationDropdown').change(function () {
            var selectedOption = $(this).val();
            if (selectedOption) {
                switch (selectedOption) {
                    case "PatientRegistration":
                        window.location.href = '/Patient'; // Redirect to Patient Registration page
                        break;
                    case "AppointmentBooking":
                        window.location.href = '/AppointmentBooking'; // Redirect to Appointment Booking page
                        break;
                    // Add more cases for additional options
                    default:
                        break;
                }
            }
        });
    });
</script>
